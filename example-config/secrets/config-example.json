{
  "version": "1.0",
  "zookeepers": [
    "127.0.0.1"
  ],
  "clusterId": "iudx-aaa-cluster",
  "postgresOptions": {
    "databaseIP": "<database-ip>",
    "databasePort": 5433,
    "databaseName": "<db-name>",
    "databaseSchema": "<db-schema>",
    "databaseUserName": "<database-user-name>",
    "databasePassword": "<db-password>"
  },
  "commonOptions":{
    "cosDomain":"asdasd",
    "cosAdminUserId": "<UUID>",
    "initialCreditBalance": 1000,
    "corsAllowedOrigin": []
  },
  "emailOptions": {
    "emailSender": "no-reply.dev@iudx.io",
    "senderName": "TGDEX",
    "cosAdminEmailId":"dummy@gmail.com",
    "TGDxUrl": "<plaform-url>"
  },
  "keycloakOptions":{
    "keycloakRealm": "<keycloak-realm>",
    "keycloakUrl": "<keycloak-url>",
    "keycloakAdminClientId": "<client-id>",
    "keycloakAdminClientSecret": "<client-secret>",
    "keycloakAdminPoolSize": "10",
    "keycloakJwtLeeway": 90,
    "keycloakCertUrl": "<keycloak-cert-url>",
    "iss": "<issuer>",
    "jwtIgnoreExpiry": true,
    "jwksRefreshIntervalMs": 21600000
  },
  "KYCOptions": {
    "digilockerTokenUrl":"<URL>",
    "digilockerAadhaarUrl":"<URL>",
    "clientId" :"<client-id>",
    "clientSecret": "<secret>",
    "redirectUri":"<URL>"
  },
  "jwtKeystoreOptions":{
    "keystorePath": "configs/keystore.jks",
    "keystorePassword": "secret"
  },
  "modules": [
    {
      "id": "org.cdpg.dx.aaa.apiserver.ApiServerVerticle",
      "verticleInstances": 1,
      "isWorkerVerticle": false,
      "httpPort":8443,
      "required":["postgresOptions", "commonOptions", "keycloakOptions", "KYCOptions","emailOptions"],
      "poolSize": "5",
      "serverTimeoutMs": 30000,
      "corsRegexString":"^https://.+\\.iudx\\.org\\.in$"
    },
    {
      "id": "org.cdpg.dx.database.postgres.verticle.PostgresVerticle",
      "verticleInstances": 1,
      "isWorkerVerticle": false,
      "required":["postgresOptions", "commonOptions"],
      "poolSize": 5
    },{
      "id": "org.cdpg.dx.email.verticle.EmailVerticle",
      "verticleInstances": 1,
      "isWorkerVerticle": false,
      "required":["commonOptions"],
      "emailHostName": "<smtp-host>",
      "emailPort": 2587,
      "emailUserName": "<email-username>",
      "emailPassword": "<email-password>",
      "notifyByEmail": true,
      "poolSize": 5
    },
    {
      "id": "org.cdpg.dx.databroker.DataBrokerVerticle",
      "isWorkerVerticle": false,
      "verticleInstances": 1,
      "required":["commonOptions"],
      "dataBrokerIP": "<data-broker-ip>",
      "dataBrokerPort": 24568,
      "prodVhost": "IUDX",
      "internalVhost": "IUDX-INTERNAL",
      "externalVhost": "IUDX-EXTERNAL",
      "dataBrokerUserName": "<databroker-username>",
      "dataBrokerPassword": "<password>",
      "dataBrokerManagementPort": 28042,
      "connectionTimeout": 6000,
      "requestedHeartbeat": 60,
      "handshakeTimeout": 6000,
      "requestedChannelMax": 5,
      "networkRecoveryInterval": 500,
      "automaticRecoveryEnabled": "true",
      "brokerAmqpIp": "<data-broker-ip>",
      "brokerAmqpPort": 24567
    }
  ]
}